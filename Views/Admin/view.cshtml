@model IEnumerable<Test.Models.Admin>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/Content/CSS/ShowAllUsers.css" />


<div class="container" style="padding:25px; width:100%">
    <div style=" margin: 10px; ">
        @Html.ActionLink("Add Admin", "Register", "admin", null, new { @class = "btn-add" })
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list" style="width:100%">
                        <thead>
                            <tr>
                                <th><span>User Name </span></th>
                                <th><span>Email</span></th>
                                <th><span>Phone</span></th>
                                <th><span>Degree</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ foreach (var admin in Model)
                                {
                                    <tr style="text-align:center">
                                        <td>
                                            <img src="~/Attach/icon.png" alt="">
                                            <a href="#" class="user-link">@admin.Name</a>
                                        </td>

                                        <td>
                                            <a href="#">@admin.Email</a>
                                        </td>
                                        <td>@admin.Phone</td>
                                        <td>@admin.AdminDegree</td>
                                        <td style="width: 20%;">

                                            <a href="delete/@admin.Id" class="table-link danger">
                                                <span class="fa-stack">
                                                    <i class="fa fa-square fa-stack-2x"></i>
                                                    <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
