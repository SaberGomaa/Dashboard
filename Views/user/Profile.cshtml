@model Test.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile </title>
    <link href="~/Attach/icon.png" rel="icon" />

    <link rel="stylesheet" href="~/Content/CSS/profile.css" />

</head>
<body>
    <!-- Navbar top -->
    <div class="navbar-top">
        <div class="title">
            <h1>Profile</h1>
        </div>

        <!-- Navbar -->
        <ul>
            <li>
                <a href="#message">
                    <img src="~/Attach/icon.png" width="20" height="20" /> Messages
                </a>
            </li>
            <li>
                <a href="#notification">
                    <img src="~/Attach/icon.png" width="20" height="20" /> @Model.Name
                </a>
            </li>
            <li>
                <img src="~/Attach/icon.png" width="20" height="20" />
                @Html.ActionLink("Logout", "Logout", "operation")

            </li>
        </ul>
        <!-- End -->
    </div>
    <!-- End -->
    <!-- Sidenav -->
    <div class="sidenav">
        <div class="profile">
            <img src="~/Attach/icon.png" alt="" width="100" height="100">

            <div class="name">
                Train Live Location
            </div>
            <div class="job">
                Dashboard
            </div>
        </div>

        <div class="sidenav-url">
            <div class="url">
                <a href="#profile" class="active">Profile</a>
                <hr align="center">
            </div>
            <div class="url">
                <a href="#settings">Settings</a>
                <hr align="center">
            </div>
        </div>
    </div>
    <!-- End -->
    <!-- Main -->
    <div class="main">
        <h2>IDENTITY</h2>
        <div class="card">
            <div class="card-body">
                <i class="fa fa-pen fa-xs edit"></i>
                <table>
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td>Jop</td>
                            <td>:</td>
                            <td>@Model.Jop</td>
                        </tr>
                        <tr>
                            <td>Phone</td>
                            <td>:</td>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>:</td>
                            <td>@Model.Address </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <h2>SOCIAL MEDIA</h2>
        <div class="card">
            <div class="card-body">
                <i class="fa fa-pen fa-xs edit"></i>
                <div class="social-media">
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />
                    </span>
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />

                    </span>
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />
                    </span>
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />

                    </span>
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />

                    </span>
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />

                    </span>
                    <span class="fa-stack fa-sm">
                        <img src="~/Attach/icon.png" width="40" height="40" />

                    </span>
                </div>
            </div>
        </div>
    </div>
    <!-- End -->
</body>
</html>