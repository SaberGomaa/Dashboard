<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Attach/icon.png" rel="icon" />

    <link href="~/Content/CSS/navbar.css" rel="stylesheet" />

</head>
<body style="background-color:#d1d1d1">
    <div>
        <header style="margin-bottom:10px">
            <div class="inner-width">
                <h1 class="logo"><span><img src="~/Attach/icon.png" height="50" width="50" /></span></h1>
                <i class="menu-toggle-btn fas fa-bars"></i>
                <nav class="navigation-menu">
                    <a href="#"><i class="fas fa-home home"></i> Home</a>
                    <a href="#"> Posts</a>
                    <a href="#"></i> Users</a>
                    <a href="#"></i> Tickets</a>
                    <a href="#"></i> Train</a>
                    <a href="#"></i> Reports</a>
                    @if (Session["AdminId"] != null)
                    {
                        @Html.ActionLink("Logout", "Logout", "operation", null, new { @class = "aj_btn" })
                    }
                    else
                    {
                        @Html.ActionLink("Login", "Login", "operation", null, new { @class = "aj_btn" })

                    }
                </nav>
            </div>
        </header>
    </div>
    <div style="display: flex; align-items: center; justify-content: center;">
        @RenderBody()
    </div>

    <script src="~/Scripts/JS/header.js"></script>

</body>
</html>
